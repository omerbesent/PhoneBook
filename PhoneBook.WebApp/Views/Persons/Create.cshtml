<form asp-controller="Persons" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Adı</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Adı giriniz.">
    </div>

    <div class="form-group">
        <label for="lastName">Soyadı</label>
        <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Soyadı giriniz.">
    </div>

    <div class="form-group">
        <label for="company">Firma</label>
        <input type="text" class="form-control" id="company" name="company" placeholder="Firma giriniz.">
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>